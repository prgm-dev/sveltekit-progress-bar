{
	"name": "@prgm/sveltekit-progress-bar",
	"description": "A Svelte progress bar that hooks to SvelteKit navigation.",
	"author": {
		"name": "prgm.dev",
		"email": "contact@prgm.dev",
		"url": "https://prgm.dev"
	},
	"keywords": [
		"svelte",
		"kit",
		"progress",
		"load"
	],
	"bugs": {
		"url": "https://github.com/prgm-dev/sveltekit-progress-bar/issues"
	},
	"homepage": "https://github.com/prgm-dev/sveltekit-progress-bar#readme",
	"license": "MIT",
	"version": "2.0.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/prgm-dev/sveltekit-progress-bar.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/package": "^2.2.3",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.2.6",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-preprocess": "^5.1.2",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.10",
		"vitest": "^1.0.4"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"type": "module",
	"packageManager": "pnpm@8.12.1",
	"engines": {
		"node": ">=18"
	}
}
